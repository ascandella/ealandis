<div class="container">
  <div class="hero-unit">
    <h1>Notes</h1>
    <p>A collection of messages from all of those whose lives have been touched by Alden.</p>
    <p>
      <a class="btn large" href="/gallery">View Photo Gallery &raquo;</a>
    </p>
  </div>

  <section class="notes">
    <div class="row note template">
      <div class="span4">
        <h3 class="note-author"></h3>
        <p class="note-time"></p>
      </div>
      <div class="span12 note-body">
      </div>
    </div>
  <% @notes.each do |note| %>
    <div class="row note">
      <div class="span4">
        <h3><%= note.author %></h3>
        <p>
          <%= note.pretty_time %>
        </p>
      </div>
      <div class="span12 note-body">
        <%= note.pretty_body %>
      </div>
    </div>
  <% end %>
  </section>
</div>
